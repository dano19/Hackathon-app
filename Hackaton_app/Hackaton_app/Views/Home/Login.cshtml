
@{
    ViewBag.Title = "Login";
}

<h2>Login</h2>
<form method="post" action="#">
    <div class="form-group">
        <label for="formGroupInputLarge1" class="col-sm-2 control-label">Login:</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" name="name" placeholder="E-mail">
        </div>
    </div>
    <div class="form-group">
        <label for="formGroupInputLarge1" class="col-sm-2 control-label">Password:</label>
        <div class="col-sm-10">
            <input type="password" class="form-control" name="pass" placeholder="Password">
        </div>
    </div>

    <button type="button" class="btn btn-secondary btn-lg">Login</button>


</form>

@Html.ActionLink("Forgot your password?", "Register", "Home")
@Html.ActionLink("Create a Travel account", "Register", "Home")